<skin xmlns="http://weblookandfeel.com/XmlSkin">
    <!-- Skin settings -->
    <id>ptg.skin</id>
    <class>PTGSkin</class>
    <supportedSystems>all</supportedSystems>
    <!-- Skin information -->
    <title>PTGSkin</title>
    <description>Custom WebLaF skin for ptg</description>
    <author>Daniel Elliott</author>
    <!-- Including WebLaF default skin, will use its style as a base -->
    <include nearClass="com.alee.skin.dark.DarkSkin">resources/skin.xml</include>
    <!-- Custom panel style -->
    <style type="panel" id="shadow">
        <painter>
            <decorations>
                <decoration>
                    <WebShape round="5" />
                    <WebShadow type="outer" width="15" />
                    <LineBorder color="0, 0, 0" />
                </decoration>
            </decorations>
        </painter>
    </style>
    <!-- Scroll pane style -->
    <style type="scrollpane" id="scrollshadow" padding="2, 2, 2, 2">
        <painter>
            <decorations>
                <decoration>
                    <WebShape round="5" />
                    <WebShadow type="outer" width="15" />
                </decoration>
            </decorations>
        </painter>
    </style>
</skin>